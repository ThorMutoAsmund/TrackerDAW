<UserControl x:Class="TrackerDAW.PartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrackerDAW"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="400"
             BorderBrush="black" BorderThickness="1"
             Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid x:Name="grid" PreviewMouseMove="grid_PreviewMouseMove" MouseLeftButtonDown="grid_MouseLeftButtonDown" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="titleTextBlock" Grid.Row="0" Padding="4" Text="Part x" Background="{StaticResource SubmenuItemBackground}"></TextBlock>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Edit part..." Name="editPartMenuItem" Click="editPartMenuItem_Click" />
                <Separator />
                <MenuItem Header="Delete part..." Name="deletePartMenuItem" Click="deletePartMenuItem_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
